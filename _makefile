CC = g++

CFLAGS = -Wall -Werror -std=c++14 -O

qwirkle: qwirkle.o hand.o Tile.o TileBag.o LinkedList.o Board.o Driver.o Messages.o Player.o Node.o
    $(CC) $(CFLAGS) qwirkle qwirkle.o hand.o Tile.o TileBag.o LinkedList.o Board.o Driver.o Messages.o Player.o Node.o -o qwirkle

qwirkle.o: qwirkle.cpp
    $(CC) $(CFLAGS) -c qwirkle.cpp

hand.o: hand.cpp hand.h
    $(CC) $(CFLAGS) -c hand.cpp

Tile.o: Tile.cpp Tile.h
    $(CC) $(CFLAGS) -c Tile.cpp

TileBag.o: TileBag.cpp TileBag.h
    $(CC) $(CFLAGS) -c TileBag.cpp

LinkedList.o: LinkedList.cpp LinkedList.h
    $(CC) $(CFLAGS) -c LinkedList.cpp

Board.o: Board.cpp Board.h
    $(CC) $(CFLAGS) -c Board.cpp

Driver.o: Driver.cpp Driver.h
    $(CC) $(CFLAGS) -c Driver.cpp

Messages.o: Message.cpp Message.h
    $(CC) $(CFLAGS) -c Message.cpp

Player.o: Player.cpp Player.h
    $(CC) $(CFLAGS) -c Player.cpp

Node.o: Node.cpp Node.h
    $(CC) $(CFLAGS) -c Node.cpp

clean:
    rm *.o qwirkle


